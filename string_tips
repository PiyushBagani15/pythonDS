#checking a string is palindrome or not in judt 2 lines
def is_palindrome(string1):return string1 == string1[::-1]
print(is_palindrome('piyush'))

#checking another version of this
def is_annagram(s1,s2): return s1==s2
print(is_annagram('piyush','hsuyip'))

#reverse a string
def reverse (string):
    if len(string)<= 1 : return string
    return reverse(string[ 1 :])+string[ 0 ]
print(reverse( "hello" ))
